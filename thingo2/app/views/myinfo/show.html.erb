
<div id="apDiv3">
	
<h3>ABOUT ME</h3>

<div class="imageborder">
<% if @user.spec.avatar_file_name.nil? %>

<%= image_tag ("empty-face.jpg") %>

<% else %>

<%= image_tag (@user.spec.avatar.url(:medium))   %>

<% end %>

</div>

<p>
<%= @user.spec.name %> 



<%= form_for @spec, :html => { :multipart => true }  do |f| %>
