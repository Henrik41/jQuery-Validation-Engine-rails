	      <h2><%= pluralize(@spec.errors.count, "error") %> prohibited this spec from being saved:</h2>

	      <ul>
	      <% @spec.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>

	  
	   <%= f.file_field :avatar %>
	  <div class="actions">

	    <%= f.submit %>
	  </div>
	<% end %>
